<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/color2D73D5"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_14sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/sf_pro_display_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anxiety" />

            <TextView
                android:id="@+id/tvDiscription"
                style="@style/sf_pro_display_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn down the stress volume" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDays"
                style="@style/sf_pro_display_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="7 Steps"
                tools:ignore="RtlCompat" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/sf_pro_display_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="5-11 min " />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>