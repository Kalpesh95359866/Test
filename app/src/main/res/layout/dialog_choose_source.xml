<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_top_rounded_white"
    tools:ignore="UnusedAttribute"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color1A1C6C"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp">
                <LinearLayout
                    android:id="@+id/ll_camera"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    >

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@android:drawable/ic_menu_camera"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/txt_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a Picture"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color1A1C6C"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp">
                <LinearLayout
                    android:id="@+id/llGallery"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        app:srcCompat="@android:drawable/ic_menu_gallery" />

                    <TextView
                        android:id="@+id/txt_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="From Gallery"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            android:background="@drawable/curve_border_white"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color1A1C6C"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="visible"
            />

    </RelativeLayout>


    <!--</android.support.v7.widget.CardView>-->


</RelativeLayout>